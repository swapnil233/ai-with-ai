# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_app_builder?schema=public"

# Object Storage (S3-compatible via MinIO in Docker)
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_BUCKET="ai-app-builder"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_FORCE_PATH_STYLE="true"
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"

# API Configuration
API_PORT=4000
API_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000
TRUSTED_ORIGINS=http://localhost:3000
API_BODY_LIMIT=1mb
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW_MS=900000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Authentication (better-auth)
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"

# AI Provider (add your preferred provider)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Modal (for sandboxing)
MODAL_TOKEN_ID=""
MODAL_TOKEN_SECRET=""

# Node environment
NODE_ENV=development
